from ncclient import manager

m = manager.connect(
    host="192.168.1.1",
    port=830,
    username="admin",
    password="admin123",
    hostkey_verify=False
)

delete_loopback_xml = """
<config>
  <interfaces xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces">
    <interface operation="delete">
      <name>Loopback100</name>
    </interface>
  </interfaces>
</config>
"""

m.edit_config(target="running", config=delete_loopback_xml)

print("Loopback deleted successfully")

m.close_session()
